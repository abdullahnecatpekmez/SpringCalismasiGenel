<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="triangle" class="org.abdullah.javabrain1.Triangle">
   <property name="PointA" ref="Point1"/>
    <property name="PointB" ref="Point2"/>
     <property name="PointC" ref="Point3"/>
</bean>

<bean id="Point1" class="org.abdullah.javabrain1.Point">
	<property name="x" value="0"/>
	<property name="y" value="0"/>
</bean>


<bean id="Point2" class="org.abdullah.javabrain1.Point">
	<property name="x" value="-20"/>
	<property name="y" value="0"/>
</bean>

<bean id="Point3" class="org.abdullah.javabrain1.Point">
	<property name="x" value="20"/>
	<property name="y" value="0"/>
</bean>


</beans>
